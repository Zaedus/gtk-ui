enum Alignment {
    start
    end
    center
    fill
    auto
}

@GtkWindow {
    @Prop("title", $title).translatable($translatable)
}
.children(1)
.arg($title, string)

@GtkLabel {
    @Prop("label", $label).translatable($translatable)
}
.children(1)
.arg($label, string)
.prop($align, Alignment)
.prop($translatable, bool)